	<set xpath="blocks/block[@name='trapSpikesWoodMaster']/property[@name='Damage_received']/@value">8</set>
	<set xpath="blocks/block[@name='trapSpikesScrapIronMaster']/property[@class='RepairItems']/property[@name='resourceForgedIron']/@value">1</set>
