<CVPZombieLoot>

    <!-- Increases loot drops | Between .02 - .25 (%2 - 25%) -->
    <set xpath="/entity_classes/entity_class[contains(@name, 'zombie')]/property[@name='LootDropProb']/@value">.25</set>

    <!-- Loot stays for 300 seconds (5 Minutes) -->
    <set xpath="/entity_classes/entity_class[contains(@name, 'EntityLootContainerRegular')]/property[@name='TimeStayAfterDeath']/@value">300</set>
    <set xpath="/entity_classes/entity_class[contains(@name, 'EntityLootContainerStrong')]/property[@name='TimeStayAfterDeath']/@value">300</set>
    <set xpath="/entity_classes/entity_class[contains(@name, 'EntityLootContainerBoss')]/property[@name='TimeStayAfterDeath']/@value">300</set>
    <set xpath="/entity_classes/entity_class[contains(@name, 'EntityLootContainerBandit')]/property[@name='TimeStayAfterDeath']/@value">300</set>

</CVPZombieLoot>